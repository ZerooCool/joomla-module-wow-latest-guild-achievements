<?xml version="1.0" encoding="utf-8"?>
<!-- @Version $Id: mod_wow_latest_guid_achievements.xml 2 2011-09-17 16:36:01Z bRunO $ -->
<install type="module" version="1.5.0" client="site" method="upgrade">
    <name>WoW latest Guild Achievements</name>
    <author>Branko Wilhelm</author>
    <creationDate>Sep 2011</creationDate>
    <copyright>(C) 2011 Branko Wilhelm</copyright>
    <license>http://www.gnu.org/licenses/gpl.html GNU/GPL version 3</license>
    <authorEmail>bw@z-index.net</authorEmail>
    <authorUrl>www.z-index.net</authorUrl>
    <version>1.0</version>
    <description>Display latest WoW Guild Achievements.</description>
    <files>
        <filename module="mod_wow_latest_guid_achievements">mod_wow_latest_guid_achievements.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>mod_wow_latest_guid_achievements.php</filename>
        <folder>tmpl</folder>
    </files>
    <languages folder="lang">
        <language tag="en-GB">en-GB.mod_wow_latest_guid_achievements.ini</language>
        <language tag="de-DE">de-DE.mod_wow_latest_guid_achievements.ini</language>
    </languages>
    <!-- Joomla! 1.6+ -->
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="guild" type="text" default="" size="30" required="true" label="MOD_WOW_LATEST_GUILD_AV_GUILD_LABEL" description="MOD_WOW_LATEST_GUILD_AV_GUILD_DESC" />
                <field name="realm" type="text" default="" size="30" required="true" label="MOD_WOW_LATEST_GUILD_AV_REALM_LABEL" description="MOD_WOW_LATEST_GUILD_AV_REALM_DESC" />
                <field name="lang" type="text" default="en" size="30" required="true" label="MOD_WOW_LATEST_GUILD_AV_LANG_LABEL" description="MOD_WOW_LATEST_GUILD_AV_LANG_DESC" />
                <field name="region" type="text" default="us" size="30" required="true" label="MOD_WOW_LATEST_GUILD_AV_REGION_LABEL" description="MOD_WOW_LATEST_GUILD_AV_REGION_DESC" />
            </fieldset>
            <fieldset name="advanced">
                <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
                <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
                <field name="cache_time" type="text" filter="integer" default="15" size="5" required="true" label="MOD_WOW_LATEST_GUILD_AV_CACHE_LABEL" description="MOD_WOW_LATEST_GUILD_AV_CACHE_DESC" />
                <field name="timeout" type="text" filter="integer" default="10" size="5" required="true" label="MOD_WOW_LATEST_GUILD_AV_TIMEOUT_LABEL" description="MOD_WOW_LATEST_GUILD_AV_TIMEOUT_DESC" />
                <field name="wowhead" type="radio" default="yes" label="MOD_WOW_LATEST_GUILD_AV_WOWHEAD_LABEL" description="MOD_WOW_LATEST_GUILD_AV_WOWHEAD_DESC">
                    <option value="yes">JYES</option>
                    <option value="no">JNO</option>
                </field>
                <field name="wowhead_lang" type="list" default="en" label="MOD_WOW_LATEST_GUILD_AV_WOWHEAD_LANG_LABEL" description="MOD_WOW_LATEST_GUILD_AV_WOWHEAD_LANG_DESC">
                    <option value="en">English</option>
                    <option value="de">Deutsch</option>
                    <option value="fr">Français</option>
                    <option value="es">Español</option>
                    <option value="ru">Русский</option>
                </field>
            </fieldset>
        </fields>
    </config>
    <!-- Joomla! 1.5 -->
    <params name="basic">
        <param name="guild" type="text" default="" size="30" label="MOD_WOW_LATEST_GUILD_AV_GUILD_LABEL" description="MOD_WOW_LATEST_GUILD_AV_GUILD_DESC" />
        <param name="realm" type="text" default="" size="30" label="MOD_WOW_LATEST_GUILD_AV_REALM_LABEL" description="MOD_WOW_LATEST_GUILD_AV_REALM_DESC" />
        <param name="lang" type="text" default="en" size="30" label="MOD_WOW_LATEST_GUILD_AV_LANG_LABEL" description="MOD_WOW_LATEST_GUILD_AV_LANG_DESC" />
        <param name="region" type="text" default="us" size="30" label="MOD_WOW_LATEST_GUILD_AV_REGION_LABEL" description="MOD_WOW_LATEST_GUILD_AV_REGION_DESC" />
    </params>
    <params name="advanced">
        <param name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
        <param name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
        <param name="cache_time" type="text" default="15" size="5" label="MOD_WOW_LATEST_GUILD_AV_CACHE_LABEL" description="MOD_WOW_LATEST_GUILD_AV_CACHE_DESC" />
        <param name="timeout" type="text" default="10" size="5" label="MOD_WOW_LATEST_GUILD_AV_TIMEOUT_LABEL" description="MOD_WOW_LATEST_GUILD_AV_TIMEOUT_DESC" />
        <param name="wowhead" type="radio" default="yes" label="MOD_WOW_LATEST_GUILD_AV_WOWHEAD_LABEL" description="MOD_WOW_LATEST_GUILD_AV_WOWHEAD_DESC">
            <option value="yes">YES</option>
            <option value="no">NO</option>
        </param>
        <param name="wowhead_lang" type="list" default="en" label="MOD_WOW_LATEST_GUILD_AV_WOWHEAD_LANG_LABEL" description="MOD_WOW_LATEST_GUILD_AV_WOWHEAD_LANG_DESC">
            <option value="en">English</option>
            <option value="de">Deutsch</option>
            <option value="fr">Français</option>
            <option value="es">Español</option>
            <option value="ru">Русский</option>
        </param>
    </params>
</install>
